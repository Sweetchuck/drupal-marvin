{
    "name": "drupal/marvin",
    "description": "Set of developer helper Drush commands",
    "type": "drupal-drush",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "repositories": {
        "drush/drush": {
            "type": "git",
            "url": "https://github.com/drush-ops/drush.git",
            "reference": "d3e5b475da82a89ad81f11ba5b5768856f55b861"
        },
        "sweetchuck/robo-composer": {
            "type": "path",
            "url": "../../sweetchuck/robo-composer"
        },
        "sweetchuck/robo-git": {
            "type": "path",
            "url": "../../sweetchuck/robo-git"
        },
        "sweetchuck/robo-nvm": {
            "type": "path",
            "url": "../../sweetchuck/robo-nvm"
        },
        "sweetchuck/robo-phpcs": {
            "type": "path",
            "url": "../../sweetchuck/robo-phpcs"
        },
        "sweetchuck/robo-phpunit": {
            "type": "path",
            "url": "../../sweetchuck/robo-phpunit"
        },
        "sweetchuck/robo-stringy": {
            "type": "path",
            "url": "../../sweetchuck/robo-stringy"
        },
        "sweetchuck/robo-yarn": {
            "type": "path",
            "url": "../../sweetchuck/robo-yarn"
        }
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "danielstjules/stringy": "^3.1",
        "drupal/coder": "^8.3",
        "icecave/semver": "^3.0",
        "squizlabs/php_codesniffer": "^3.3",
        "sweetchuck/git-hooks-stdinput-reader": "^0.0",
        "sweetchuck/robo-composer": "*",
        "sweetchuck/robo-git": "*",
        "sweetchuck/robo-nvm": "*",
        "sweetchuck/robo-phpcs": "*",
        "sweetchuck/robo-phpunit": "*",
        "sweetchuck/robo-stringy": "*",
        "sweetchuck/robo-yarn": "*",
        "sweetchuck/utils": "dev-master",
        "symfony/yaml": "^3.4 || ^4.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "composer/installers": "^1.5",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/core": "^8.5",
        "drush/drush": "dev-master#d3e5b475da82a89ad81f11ba5b5768856f55b861",
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^6.3",
        "sweetchuck/git-hooks": "^0.0"
    },
    "suggest": {
        "drush/drush": "9.6.*"
    },
    "autoload": {
        "psr-4": {
            "Drush\\Commands\\marvin\\": "Commands/marvin/",
            "Drupal\\marvin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Dev\\marvin\\Composer\\": "src-dev/Composer/",

            "Drupal\\Tests\\marvin\\Helper\\": "tests/src/Helper/",
            "Drupal\\Tests\\marvin\\Unit\\": "tests/src/Unit/",
            "Drupal\\Tests\\marvin\\Integration\\": "tests/src/Integration/",
            "Unish\\": "vendor/drush/drush/tests/unish/",

            "Drupal\\Tests\\": "tests/fixtures/project_01/docroot/core/tests/Drupal/Tests/",
            "Drupal\\KernelTests\\": "tests/fixtures/project_01/docroot/core/tests/Drupal/KernelTests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-8.x-1.x": "1.x.x-dev"
        },
        "drush": {
            "services": {
                "drush.services.yml": "^9"
            }
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drush/drush": {
                "Unish tests": "https://patch-diff.githubusercontent.com/raw/drush-ops/drush/pull/3962.diff"
            }
        },
        "drupal-scaffold": {
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".gitattributes",
                ".ht.router.php",
                ".htaccess",
                "web.config"
            ]
        },
        "installer-paths": {
            "tests/fixtures/project_01/docroot/core": ["type:drupal-core"],
            "tests/fixtures/project_01/docroot/libraries/{$name}": ["type:drupal-library"],
            "tests/fixtures/project_01/docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "tests/fixtures/project_01/docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "tests/fixtures/project_01/docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "tests/fixtures/project_01/drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "marvin": {
            "drushUnish": {
                "filesToSymlink": {
                    "etc": true
                }
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "\\Drupal\\Dev\\marvin\\Composer\\Scripts::postInstallCmd"
        ],
        "post-update-cmd": [
            "\\Drupal\\Dev\\marvin\\Composer\\Scripts::postUpdateCmd"
        ],
        "clean": [
            "rm -rf bin/ reports/ vendor/",
            "git clean --force -d -x -- tests/",
            "git clean --force -d -X -- tests/"
        ]
    }
}
