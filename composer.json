{
    "name": "drupal/marvin",
    "description": "Set of developer helper Drush commands",
    "type": "drupal-drush",
    "license": "GPL-2.0",
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "drush/drush": "^9.0.0"
    },
    "require-dev": {
        "sweetchuck/git-hooks": "^0.0"
    },
    "autoload": {
        "psr-4": {
            "Drush\\Commands\\Marvin\\": "src/Commands/Marvin/"
        }
    },
    "scripts": {
        "post-install-cmd": "\\Drupal\\marvin\\Composer\\Scripts::postInstallCmd",
        "post-update-cmd": "\\Drupal\\marvin\\Composer\\Scripts::postUpdateCmd"
    }
}
