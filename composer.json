{
    "name": "drupal/marvin",
    "description": "Set of developer helper Drush commands",
    "type": "drupal-drush",
    "license": "GPL-2.0",
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "ext-mbstring": "*",
        "danielstjules/stringy": "^3.1",
        "drupal/coder": "^8.2",
        "drush/drush": "dev-master",
        "sweetchuck/robo-git": "^0.0.7",
        "sweetchuck/robo-phpcs": "^0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "sweetchuck/git-hooks": "^0.0"
    },
    "autoload": {
        "psr-4": {
            "Drush\\Commands\\Marvin\\": "Commands/Marvin/",
            "Drush\\marvin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drush\\Commands\\Marvin\\Tests\\Unit\\": "tests/src/Unit/Drush/Commands/Marvin/",
            "Drush\\marvin\\Tests\\Unit\\": "tests/src/Unit/Drush/marvin/"
        }
    },
    "extra": {
        "sweetchuck/git-hooks": {
            "core.hooksPath": "git-hooks/self",
            "symlink": true
        }
    },
    "scripts": {
        "post-install-cmd": "\\Drush\\marvin\\Composer\\Scripts::selfPostInstallCmd",
        "post-update-cmd": "\\Drush\\marvin\\Composer\\Scripts::selfPostUpdateCmd"
    }
}
