{
    "name": "drupal/marvin",
    "description": "Set of developer helper Drush commands",
    "type": "drupal-drush",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "repositories": {},
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "consolidation/robo": "^2.0",
        "danielstjules/stringy": "^3.1",
        "drupal/coder": "^8.3",
        "icecave/semver": "^3.0",
        "phpmd/phpmd": "^2.8",
        "squizlabs/php_codesniffer": "^3.5",
        "sweetchuck/git-hooks-stdinput-reader": "1.x-dev",
        "sweetchuck/robo-composer": "1.x-dev",
        "sweetchuck/robo-git": "1.x-dev",
        "sweetchuck/robo-nvm": "1.x-dev",
        "sweetchuck/robo-phpcs": "1.x-dev",
        "sweetchuck/robo-phpmd": "1.x-dev",
        "sweetchuck/robo-phpunit": "1.x-dev",
        "sweetchuck/robo-stringy": "1.x-dev",
        "sweetchuck/robo-yarn": "1.x-dev",
        "sweetchuck/utils": "1.x-dev",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "ext-dom": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "behat/mink-goutte-driver": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "drupal/core-composer-scaffold": "^9.0",
        "drupal/core-dev": "^9.0",
        "drupal/core-recommended": "^9.0",
        "drush/drush": "^10.1",
        "mikey179/vfsstream": "^1.6",
        "oomphinc/composer-installers-extender": "^2.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.0",
        "weitzman/drupal-test-traits": "^1.1"
    },
    "suggest": {
        "drush/drush": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Drush\\Commands\\marvin\\": "Commands/marvin/",
            "Drupal\\marvin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Dev\\marvin\\Composer\\": "src-dev/Composer/",

            "Drupal\\Tests\\marvin\\": "tests/src/",

            "Drupal\\Tests\\": "tests/fixtures/project_01/docroot/core/tests/Drupal/Tests/",
            "Drupal\\TestTools\\": "tests/fixtures/project_01/docroot/core/tests/Drupal/TestTools/",
            "Drupal\\KernelTests\\": "tests/fixtures/project_01/docroot/core/tests/Drupal/KernelTests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-8.x-1.x": "1.x.x-dev"
        },
        "drush": {
            "services": {
                "drush.services.yml": "^9"
            }
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/core": {
                "https://www.drupal.org/project/drupal/issues/3182103": "https://git.drupalcode.org/project/drupal/-/merge_requests/28/diffs.patch"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "tests/fixtures/project_01/docroot/core": [
                "type:drupal-core"
            ],
            "tests/fixtures/project_01/docroot/libraries/{$name}": [
                "type:bower-asset",
                "type:npm-asset",
                "type:drupal-library"
            ],
            "tests/fixtures/project_01/docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "tests/fixtures/project_01/docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "tests/fixtures/project_01/docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "tests/fixtures/project_01/drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "tests/fixtures/project_01/docroot"
            },
            "file-mapping": {
                "[web-root]/modules/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/modules/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/profiles/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/profiles/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/themes/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/themes/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/sites/example.settings.local.php": {
                    "mode": "skip"
                },
                "[web-root]/sites/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/sites/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/.csslintrc": {
                    "mode": "skip"
                },
                "[web-root]/.editorconfig": {
                    "mode": "skip"
                },
                "[web-root]/.eslintignore": {
                    "mode": "skip"
                },
                "[web-root]/.eslintrc.json": {
                    "mode": "skip"
                },
                "[web-root]/.gitattributes": {
                    "mode": "skip"
                },
                "[web-root]/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/.ht.router.php": {
                    "mode": "skip"
                },
                "[web-root]/example.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/INSTALL.txt": {
                    "mode": "skip"
                },
                "[web-root]/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/.htaccess": {
                    "mode": "skip"
                },
                "[web-root]/web.config": {
                    "mode": "skip"
                },
                "[project-root]/.editorconfig": {
                    "mode": "skip"
                }
            },
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            }
        },
        "marvin": {
            "drushUnish": {
                "filesToSymlink": {
                    "etc": true
                }
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "\\Drupal\\Dev\\marvin\\Composer\\Scripts::postInstallCmd"
        ],
        "post-update-cmd": [
            "\\Drupal\\Dev\\marvin\\Composer\\Scripts::postUpdateCmd"
        ],
        "clean": [
            "@clean:reports",
            "@clean:composer"
        ],
        "clean:composer": [
            "rm -rf bin/ vendor/",
            "chmod -R u+w tests/fixtures/project_01/docroot/sites/default/",
            "git clean --force -d -x -- tests/",
            "git clean --force -d -X -- tests/"
        ],
        "clean:reports": "[ ! -d ./reports ] || find ./reports -mindepth 1 -maxdepth 1 -exec rm -rf {} \\;",
        "test": [
            "@clean:reports",
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": [
            "mkdir -p reports/machine/coverage-php/",
            "phpunit --testsuite Unit --coverage-html reports/human/coverage/Unit/html --testdox-html reports/human/testdox/Unit.html --coverage-clover reports/machine/coverage-clover/Unit.xml --coverage-php reports/machine/coverage-php/Unit.php --log-junit reports/machine/junit/Unit.xml"
        ],
        "test:integration": [
            "mkdir -p reports/machine/coverage-php/",
            "phpunit --testsuite Integration --coverage-html reports/human/coverage/Integration/html --testdox-html reports/human/testdox/Integration.html --coverage-clover reports/machine/coverage-clover/Integration.xml --coverage-php reports/machine/coverage-php/Integration.php --log-junit reports/machine/junit/Integration.xml"
        ],
        "generate:coverage-html": [
            "\\Drupal\\Dev\\marvin\\Composer\\Scripts::generateCoverageHtml"
        ]
    }
}
